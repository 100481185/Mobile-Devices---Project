<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dropdownmenu"
        android:spinnerMode="dropdown"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/dropdownmenu"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="5"
            android:columnCount="2">

            <FrameLayout android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="2"
                android:layout_column="0"
                android:layout_row="0">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton"
                    android:onClick="eventSelected"
                    android:layout_columnWeight="2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|top" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/caption"
                    android:layout_gravity="center_horizontal|bottom|left"
                    android:layout_marginTop="50dp" />
            </FrameLayout>

            <FrameLayout android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="2"
                android:layout_column="1"
                android:layout_row="0">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton2"
                    android:onClick="eventSelected"
                    android:layout_columnWeight="2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|top"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/caption2"
                    android:layout_gravity="center_horizontal|bottom|left"
                    android:layout_marginTop="80dp"   />
            </FrameLayout>

            <FrameLayout android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="2"
                android:layout_column="0"
                android:layout_row="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton3"
                    android:onClick="eventSelected"
                    android:layout_columnWeight="2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|top"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/caption3"
                    android:layout_gravity="center_horizontal|bottom|left"
                    android:layout_marginTop="55dp"   />
            </FrameLayout>

            <FrameLayout android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="2"
                android:layout_column="1"
                android:layout_row="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton4"
                    android:onClick="eventSelected"
                    android:layout_columnWeight="2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|top"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/caption4"
                    android:layout_gravity="center_horizontal|bottom|left"
                    android:layout_marginTop="50dp"   />
            </FrameLayout>

            <FrameLayout android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="2"
                android:layout_column="0"
                android:layout_row="2">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton5"
                    android:onClick="eventSelected"
                    android:layout_columnWeight="2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|top"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/caption5"
                    android:layout_gravity="center_horizontal|bottom|left"
                    android:layout_marginTop="50dp"   />
            </FrameLayout>

            <FrameLayout android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="2"
                android:layout_column="1"
                android:layout_row="2">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton6"
                    android:onClick="eventSelected"
                    android:layout_columnWeight="2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|top"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/caption6"
                    android:layout_gravity="center_horizontal|bottom|left"
                    android:layout_marginTop="50dp"   />
            </FrameLayout>

            <FrameLayout android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="2"
                android:layout_column="0"
                android:layout_row="3">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton7"
                    android:onClick="eventSelected"
                    android:layout_columnWeight="2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|top"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/caption7"
                    android:layout_gravity="center_horizontal|bottom|left"
                    android:layout_marginTop="50dp"   />
            </FrameLayout>

            <FrameLayout android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="2"
                android:layout_column="1"
                android:layout_row="3">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton8"
                    android:onClick="eventSelected"
                    android:layout_columnWeight="2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|top"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/caption8"
                    android:layout_gravity="center_horizontal|bottom|left"
                    android:layout_marginTop="80dp"   />
            </FrameLayout>

            <FrameLayout android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="2"
                android:layout_column="0"
                android:layout_row="4">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton9"
                    android:onClick="eventSelected"
                    android:layout_columnWeight="2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|top"/>
                <TextView
                    android:layout_width="100dp"
