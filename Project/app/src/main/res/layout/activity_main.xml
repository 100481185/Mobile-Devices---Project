<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dropdownmenu"
        android:spinnerMode="dropdown"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/dropdownmenu"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="5"
            android:columnCount="2">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/scrollView"
                android:onClick="eventSelected"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnWeight="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:onClick="eventSelected"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:layout_alignTop="@+id/imageButton"
                android:layout_alignEnd="@+id/scrollView"
                android:onClick="eventSelected"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:layout_below="@+id/imageButton3"
                android:layout_toStartOf="@+id/imageButton3"
                android:onClick="eventSelected"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:layout_below="@+id/imageButton4"
                android:layout_toEndOf="@+id/imageButton2"
                android:onClick="eventSelected"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:layout_below="@+id/imageButton5"
                android:layout_toStartOf="@+id/imageButton4"
                android:onClick="eventSelected"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton7"
                android:layout_below="@+id/imageButton6"
                android:layout_alignStart="@+id/imageButton"
                android:onClick="eventSelected"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton8"
                android:layout_above="@+id/imageButton"
                android:layout_toEndOf="@+id/imageButton7"
                android:onClick="eventSelected"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:layout_below="@+id/imageButton8"
                android:layout_toStartOf="@+id/imageButton4"
                android:onClick="eventSelected"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton10"
                android:layout_alignBottom="@+id/imageButton4"
                android:layout_toStartOf="@+id/imageButton6"
                android:onClick="eventSelected"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"/>
        </GridLayout>
    </ScrollView>

</RelativeLayout>
